<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#D32F2F</item>
        <item name="colorPrimaryDark">#B71C1C</item>
        <item name="colorAccent">#FF5722</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <!-- Style for splash screen elements -->
    <style name="SplashTextStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <!-- Style for pizza list items -->
    <style name="PizzaListItemStyle">
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>